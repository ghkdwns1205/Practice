package Java12_30;

import java.util.Scanner;

public class color {
	 String [] color = {"black","red","pink","yellow","white","blue"};
	
	

	public void color_choice() {
		
		Scanner sc = new Scanner(System.in);
		System.out.println("색상을 선택해주세요");
		System.out.println("1. 검정색 2. 빨간색 3. 분홍색 4. 노란색 5.흰색");
		int color_choice = sc.nextInt();
		
//		String color_ch = color[];
		switch(color_choice) {
		case 1 :
			System.out.println("검정색을 선택하셨습니다");
			String color_ch = this.color[0];
			
			
		case 2 :
			System.out.println("빨간색을 선택하셨습니다");
			  color_ch =this.color[1];
			
		case 3 :
			System.out.println("분홍색을 선택하셨습니다");
			  color_ch = this.color[2];
		
		case 4 :
			
			System.out.println("분홍색을 선택하셨습니다");
			  color_ch = this.color[3];
		case 5 :
			
			System.out.println("분홍색을 선택하셨습니다");
			  color_ch = this.color[4];
		}
		
		
	}
}
